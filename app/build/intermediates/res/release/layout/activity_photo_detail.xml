<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="nestedWeights"
    android:weightSum="8"
    android:background="@color/background" >

    <!-- Photo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="1"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_photo_detail"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"/>

        <ImageView
            android:id="@+id/scroll_helper"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:background="@color/menu_background"
        android:padding="5dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/label_photoDetailName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/details"
            android:textStyle="bold"
            android:layout_weight="3"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/label_photoDetailValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:text="@string/placeholderValue"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <ListView
        android:id="@+id/photoDetailsListView"
        android:background="@color/sub_menu_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"/>

</LinearLayout><!-- From: file:/C:/Users/rkalidin/Documents/GitHub/VIQETAndroid/app/src/main/res/layout/activity_photo_detail.xml -->